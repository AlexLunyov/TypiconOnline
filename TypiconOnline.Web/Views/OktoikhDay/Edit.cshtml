@model OktoikhDayEditModel
@{
    ViewData["Title"] = "Редактирование Текста службы Октоиха";
}
<div class="row">
    <div class="col-12">
        <div class="col-md-8">
            <h2>Редактирование свойств Текста Минейной службы</h2>
        </div>
        <div class="clearfix"></div>
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="col-sm-8">
                    <label asp-for="Ihos">Глас:</label>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Ihos" disabled/>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group col-sm-8">
                <label asp-for="DayOfWeek">День недели:</label>
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="DayOfWeek" disabled />
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="form-group col-xs-12">
                <label asp-for="Definition">Определение текста службы:</label>
                <div>
                    <textarea id="definition" class="form-control rounded-0" rows="30" asp-for="Definition"></textarea>
                    <span asp-validation-for="Definition" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group"><div class="validation" asp-validation-summary="ModelOnly"></div></div>
            <div class="col-xs-12"><button class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Сохранить</button></div>
        </form>
    </div>
</div>
@section Scripts
    {
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <script src="~/lib/codemirror/codemirror.js"></script>
    <link rel="stylesheet" href="~/lib/codemirror/codemirror.css">
    <link rel="stylesheet" href="~/lib/codemirror/show-hint.css">
    <link rel="stylesheet" href="~/lib/codemirror/xq-light.css">
    <script src="~/lib/codemirror/xml.js"></script>
    <script src="~/lib/codemirror/show-hint.js"></script>
    <script src="~/lib/codemirror/xml-hint.js"></script>
    <script src="~/js/textarea.js"></script>

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>


    <script type="text/javascript">

        $(document).ready(function () {
            createTextArea("definition", '@Model.Definition');
        });

    </script>
}