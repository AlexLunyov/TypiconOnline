@model PrintWeekTemplateCreateModel
@{
    ViewData["Title"] = "Создание печатного шаблона седмицы";
}
<div class="row">
    <div class="col-12">
        @await Component.InvokeAsync("TypiconTab", new { typiconId = ViewContext.RouteData.Values["id"], tab = TypiconTab.CreatePrintTemplate })
        <div class="row">
            <div class="col-md-8">
                <h2>Создание печатного шаблона</h2>
            </div>
            <div class="clearfix"></div>
            <form asp-action="CreateWeek" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-sm-8">
                        <label asp-for="DaysPerPage">Количество дней на страницу:</label>
                        <input asp-for="DaysPerPage" class="form-control" />
                        <span asp-validation-for="DaysPerPage" class="text-danger"></span>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group">
                    <div class="col-sm-8">
                        <label asp-for="File">Файл:</label>
                        <input asp-for="File" type="file" class="form-control" accept="text/docx" />
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group"><div class="validation" asp-validation-summary="ModelOnly"></div></div>
                <div class="col-xs-12"><button class="btn btn-primary" asp-action="CreateWeek">Создать</button></div>
            </form>
        </div>
    </div>
</div>