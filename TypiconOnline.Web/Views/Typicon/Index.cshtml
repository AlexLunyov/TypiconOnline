<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-12">
            <ol class="breadcrumb">
                <li><a asp-controller="Home" asp-action="index">Главная</a></li>
                <li class="active">Уставы</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-12"><h1>Уставы</h1></div>
    </div>
    <div class="row">
        <div class="form-group col-12">
            <a class="btn btn-primary" asp-controller="Typicon" asp-action="Create">Создать новый Устав</a>
            @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdminRole")).Succeeded)
            {
                <btn id="btnImport" class="btn btn-success">Импортировать Устав</btn>
            }
        </div>
        <div class="form-group col-12">
            <div class="justify-content-center align-content-center">
                <table id="typiconGrid" class="table table-striped table-bordered" style="width:100%">
                    <thead class="text-center">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade typ-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div id="modalWindow" class="modal-dialog modal-sm">
    </div>
</div>

<div class="modal fade import-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Импортирование Устава</h4>
            </div>
            <div class="modal-body">
                <form asp-action="Import" asp-controller="Typicon" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <label>Выберите файл:</label>
                                <div class="form-group">
                                    <input name="file" type="file" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12"><button id="exportBtn" class="btn btn-primary">Импортировать</button></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade delete-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="panel-title">Удаление Устава</h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="form-group col-sm-12">Вы уверены? <br />Удаление Устава безвозвратно.</div>
                </div>
                <div class="row">
                    <form asp-controller="Typicon" asp-action="Delete" method="post" enctype="multipart/form-data">
                        <div class="form-group col-sm-12">
                            <input id="delTypId" type="hidden" name="id" />
                            <button class="btn btn-danger">Удалить</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
    <script>
    $(document).ready(function ()
    {
        var table = $("#typiconGrid").DataTable(
        {
            language: {
                processing: "Загрузка данных...",
                zeroRecords: "Не найдено ни одного совпадения."
            },
            processing: true, // for show progress bar
            serverSide: true, // for process server side
            filter: true, // this is for disable filter (search box)
            orderMulti: false, // for disable multiple column at once
            ajax: {
                    "url": "/Typicon/LoadData/",
                    "type": "POST",
                    "datatype": "json"
                },
            columns: [
                {
                    name: "Id",
                    data: "Id",
                    visible: false,
                    searchable: false
                },
                {
                    name: "Name",
                    data: "Name",
                },
                {
                    name: "Status",
                    data: "Status",
                }
                , {
                    name: "Editable",
                    data: "Editable",
                    visible: false,
                    searchable: false
                }
                , {
                    name: "Deletable",
                    data: "Deletable",
                    visible: false,
                    searchable: false
                }
                , {
                    name: "Approvable",
                    data: "Approvable",
                    visible: false,
                    searchable: false
                }
                , {
                    title: "",
                    render: function (data, type, row) {
                        var str = "";
                        if (row['Approvable']) {
                            str = str + '&nbsp;<a class="btn btn-success" title="Утвердить Устав" href="/Typicon/Approve/' + row['Id'] + '">Утвердить</a>';
                        }
                        if (row['Editable']) {
                            str = str + '&nbsp;<a class="btn btn-primary" title="Редактировать Устав" href="/Typicon/Edit/' + row['Id'] + '">Редактировать</a>';
                        }
                        if (row['Deletable']) {
                            str = str + '&nbsp;<a href="#" class="btn btn-danger btn-delete" title="Удалить Устав">Удалить</a>';
                        }
                        @if ((await AuthorizationService.AuthorizeAsync(User, "RequireAdminRole")).Succeeded)
                        {
                            <text>
                            if (row['Editable']) {
                                str = str + '&nbsp;<a class="btn btn-success export" href="#" title="Экспортировать Устав" data-toggle="tooltip" class="btn btn-primary">Экспортировать</a>';
                            }
                            </text>
                        }
                        return str;
                    },
                    orderable: false
                }
            ]
        });

        setInterval(function () {
            table.processing( false );
            table.ajax.reload( null, false ); // user paging is not reset on reload
        }, 3000 );

        table.on('click', 'tbody tr td .export', function () {
            var row = table.row($(this).parents('tr'));
            var data = row.data();

            $("#modalWindow").load("/Typicon/ExportGet/" + data.Id);

            $(".typ-modal").modal('show');
        });

        $('#btnImport').on('click', function () {
            $(".import-modal").modal('show');
        });

        table.on('click', 'tbody tr td .btn-delete', function () {
            var row = table.row($(this).parents('tr'));
            var data = row.data();

            $("#delTypId").val(data.Id);

            $(".delete-modal").modal('show');
        });
    });


    function DeleteData(CustomerID)
        {
            if (confirm("Are you sure you want to delete ...?"))
            {
                Delete(CustomerID);
            }
            else
            {
                return false;
            }
        }


    function Delete(CustomerID)
    {
        var url = '@Url.Content("~/")' + "DemoGrid/Delete";

        $.post(url, { ID: CustomerID }, function (data)
                {
                    if (data)
                    {
                        oTable = $('#example').DataTable();
                        oTable.draw();
                    }
                    else
                    {
                        alert("Something Went Wrong!");
                    }
                });
    }

    </script>


}

