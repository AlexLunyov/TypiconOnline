@using TypiconOnline.Domain.Identity
@model TypiconOnline.Web.Models.RolesViewModels.ChangeRoleViewModel

<h2>Изменение ролей для пользователя @Model.UserEmail</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (Role role in Model.AllRoles)
        {
            <div class="col-sm-12">
                <label class="checkbox-inline">
                    <input type="checkbox" name="roles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked" : "") /> @role.Name
                </label>
            </div>


        }
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    </div>
    
</form>