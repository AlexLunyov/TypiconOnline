@model ScheduleSettingsWeekDaysModel

<div class="container">
    @await Component.InvokeAsync("TypiconTab", new { typiconId = ViewContext.RouteData.Values["id"], tab = TypiconTab.ScheduleSettings })
    <div class="row">
        <div class="col-12"><h1>График богослужений</h1></div>
    </div>
    <div class="row">
        <div class="col-12"><h3>Дни недели</h3> <p><button id="editDays" class="btn btn-primary" data-id="@ViewContext.RouteData.Values["id"]">Редактировать</button></div></p>
    </div>
    <div class="row">
        <div id="daysContainer" class="col-sm-12 col-md-6 col-lg-4">@await Html.PartialAsync("_ViewDaysPartial", Model)</div>
    </div>
    <div class="row">
        <div class="col-12"><h3>Знаки служб</h3> </p><button id="addSign" class="btn btn-primary" data-id="@ViewContext.RouteData.Values["id"]">Добавить Знак службы</button></p></div>
    </div>
    <div class="row">
        <div class="form-group col-12">
            <div class="justify-content-center align-content-center">
                <table id="signGrid" class="table table-striped table-bordered" style="width:100%">
                    <thead class="text-center">
                        <tr>
                            <th>Id</th>
                            <th>Наименование</th>
                            <th>Шаблон</th>
                            <th>Как дополнение</th>
                            <th>Номер</th>
                            <th>Приоритет</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12"><h3>Минея</h3> </p><button id="addMenology" class="btn btn-primary" data-id="@ViewContext.RouteData.Values["id"]">Добавить Минею</button></p></div>
    </div>
    <div class="row">
        <div class="form-group col-12">
            <div class="justify-content-center align-content-center">
                <table id="menologyGrid" class="table table-striped table-bordered" style="width:100%">
                    <thead class="text-center">
                        <tr>
                            <th>Id</th>
                            <th>Наименование</th>
                            <th>Знак службы</th>
                            <th>Как дополнение</th>
                            <th>Дата</th>
                            <th>Дата (вис. год)</th>
                            <th>Переход. правило</th>
                            <th>Последовательность</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12"><h3>Триодь</h3> </p><button id="addTriodion" class="btn btn-primary" data-id="@ViewContext.RouteData.Values["id"]">Добавить Триодь</button></p></div>
    </div>
    <div class="row">
        <div class="form-group col-12">
            <div class="justify-content-center align-content-center">
                <table id="triodionGrid" class="table table-striped table-bordered" style="width:100%">
                    <thead class="text-center">
                        <tr>
                            <th>Id</th>
                            <th>Наименование</th>
                            <th>Знак службы</th>
                            <th>Дней от Пасхи</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
